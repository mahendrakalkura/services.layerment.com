{% import 'macros.twig' as macros %}

{% extends 'layout.twig' %}

{% set nav = 'accounts' %}

{% block component %}
    <div class="row">
        <div class="col-md-12">
            <h1>
                <a href="{{ path('accounts-overview') }}">Accounts</a>
                -
                <a href="{{ path('accounts-manage', {
                    'username': username,
                }) }}">{{ username }}</a>
                -
                Others
                -
                MySQL
                -
                Execute Query
            </h1>
            <hr>
            {% if databases %}
                <form
                    action="{{ path('accounts-manage-others-mysql-2', {
                        'username': username,
                    }) }}"
                    class="form-horizontal"
                    method="post"
                    novalidate
                    >
                    {{ form_widget(form, {'form_type': 'horizontal'}) }}
                    {{ macros.buttons }}
                </form>
            {% else %}
                <div class="alert alert-danger">
                    <span class="fa fa-info-circle">
                    </span>
                    There are no databases in this account.
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
